<meta charset="UTF-8">

<h1> AÑO MUNDIAL DE LA FIFA </h1>

<script> 
	function saltarLinea() {
		document.write("<br>") ;
		document.write("<br>") ;
		document.write("<br>") ;
	}

	function imprimir(frase){
			document.write(frase);
			saltarLinea();
	}
	var anhoMundial = 1930;
	var limite = parseInt(prompt("ingrese el año limite para calcular :"));

	while (anhoMundial <= limite){

	imprimir("hubo un mundial de la FIFA en el año :" + anhoMundial) ;

	anhoMundial = anhoMundial + 4;
}
imprimir( "fin");





</script>
