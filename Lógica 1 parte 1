var anho = 2020

document.write("Jimena tiene : " + (anho-2010)+ "años");
document.write("<br>");
document.write("<br>");

document.write("Paola tiene : " + (anho-1995)+ "años");document.write("<br>");
document.write("<br>");
document.write("<br>");

document.write("Laura tiene : " + (anho-2005)+ "años");
document.write("<br>");
document.write("<br>");

var edadJimena = (anho -2010) ;
var edadPaola = (anho -1995) ;
var edadLaura = (anho -2005) ;
 
var n1= " Jimena ";
var n2 = " Paola " ;
var n3 = " Laura " ;

Promedio = (edadLaura+edadPaola+edadJimena)/3 ;

document.write("El promedio de las edades de "+ n1 + ", " + n2 + " y " + n3 + " es: " + Math.round (Promedio)) ; 
document.write("<br>") ;

</script>
